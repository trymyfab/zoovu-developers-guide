{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build",
    "allowJs": false,
    "resolveJsonModule": true,
    "lib": [
      "es2015.promise",
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ]
  }
}
